{% set sidebar_name = "入库明细" %}
{% set menu_name = "stock" %}
{% extends "../layouts/header.twig" %}
{% block content %}
        <div class="page-head">
        <!-- Page heading -->
        <h2 class="pull-left"><i class="fa fa-file-o"></i> Stock</h2>
        </h2>


        <!-- Breadcrumb -->
        <div class="bread-crumb pull-right">
          <a href="index.html"><i class="fa fa-home"></i> Home</a> 
          <!-- Divider -->
          <span class="divider">/</span> 
          <a href="#" class="bread-current">Forms</a>
        </div>

        <div class="clearfix"></div>

      </div>
        <!-- Page heading ends -->
        <!-- Matter -->
         <div class="matter">
        <div class="container">

          <div class="row">

            <div class="col-md-12">
            </div>
            <div class="matter">
        <div class="container">

          <div class="row">

            <div class="col-md-12">
                            <div class="widget">

                <div class="widget-head">
                  <div class="pull-left">Tables</div>
                  <div class="widget-icons pull-right">
                    <a href="tables.html#" class="wminimize"><i class="fa fa-chevron-up"></i></a> 
                    <a href="tables.html#" class="wclose"><i class="fa fa-times"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>

                  <div class="widget-content">
{{ widget('\\kartik\\grid\\GridView', {
            'layout':'\n{items}\n{pager}',      
            'id':'app-grid', 
            'tableOptions':{'class':'table table-striped table-bordered table-hover'},
            'dataProvider':dataProvider,
            'filterModel':searchModel,
            'pager':{
                'class':'\\common\\extensions\\Page\\CPageLink',
            },
            'showPageSummary':false,
            'panel':{
                'heading':'<h3 class="panel-title"><i class="glyphicon glyphicon-globe"></i>入库明细(输入物料编码可查询该物料入库明细)</h3>',
                'type':'success',
                'before':html.a('<i class=""></i>', {0:''}, {'class':''}),
                'after':html.a('<i class="glyphicon glyphicon-export"></i> 导出入库报表', searchModel.getExportLink(), {'class':'btn btn-danger'}),
                'showFooter':true,
            },
            'export':false,
            'columns':{
                0:{
                  'attribute':'material_id',
                  'value':'return $model->material->code;'|value_callback,
                },
                1:{
                  'attribute':'物料品名',
                  'value':'return $model->material->name;'|value_callback,
                },
                2:'active',
                3:{
                  'attribute':'storeroom_id',
                  'value':'return $model->storeroom->name;'|value_callback,
                },
                4:{
                  'attribute':'project_id',
                  'value':'return $model->projects->name;'|value_callback,
                },
                5:{
                  'attribute':'owner_id',
                  'value':'return $model->owners->english_name;'|value_callback,
                },
                6:{
                  'attribute':'forecast_quantity',
                  'value':'if($model->increase == 1){return "";}else{return $model->forecast_quantity;}'|value_callback,
                },
                7:'actual_quantity',
                8:'stock_time',
                9:'delivery',
                10:{
                  'attribute':'出入库标记',
                  'format':'raw',
                  'value':searchModel.getLink|value_callback,
                },
        }})
    }}

                    <div class="widget-foot">
                      <div class="clearfix"></div> 

                    </div>

                  </div>
                </div>
          </div>
        </div>
      </div>
          </div>

        </div>
      </div>
{% endblock %}
