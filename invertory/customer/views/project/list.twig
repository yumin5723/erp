{% set menu_name = "project" %}
{% set sidebar_name = "项目列表" %}
{% extends "../layouts/header.twig" %}
  {% block content %}
      <!-- Page heading ends -->

            <div class="page-head">
        <h2 class="pull-left"><i class="fa fa-table"></i> Projects</h2>

        <!-- Breadcrumb -->
        <div class="bread-crumb pull-right">
          <a href="/"><i class="fa fa-home"></i> Home</a> 
          <!-- Divider -->
          <span class="divider">/</span> 
          <a href="/project/list" class="bread-current">Projects</a>
        </div>

        <div class="clearfix"></div>

      </div>

      <!-- Matter -->
      <div class="matter">
        <div class="container">

          <!-- Table -->

            <div class="row">

              <div class="col-md-12">

                <div class="widget">

                <div class="widget-head">
                  <div class="pull-left">Tables</div>
                  <div class="widget-icons pull-right">
                    <a href="tables.html#" class="wminimize"><i class="fa fa-chevron-up"></i></a> 
                    <a href="tables.html#" class="wclose"><i class="fa fa-times"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>

                  <div class="widget-content">
{{ widget('\\yii\\grid\\GridView', {
            'layout':'\n{items}\n{pager}',         
            'id':'app-grid', 
            'tableOptions':{'class':'table table-striped table-bordered table-hover'},
            'dataProvider':dataProvider,
            'filterModel':model,
            'pager':{
                'class':'\\common\\extensions\\Page\\CPageLink',
            },
            'columns':{
                0:{
                  'attribute':'id',
                },
                1:{
                  'attribute':"name",
                  'value':'return $model->name;'|value_callback,
                },
                2:'created',
                4:{'attribute':'创建人','value':'return $model->createduser->username;'|value_callback},
                6:{
                    'class':'\\common\\extensions\\Grid\\GridActionColumn',
                    'template':'{update}',
                },
        }})
    }}
                    

                    <div class="widget-foot">
                      <div class="clearfix"></div> 

                    </div>

                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
{% endblock %}


