{% set menu_name = "material" %}
{% set sidebar_name = "物料列表" %}
{% extends "../layouts/header.twig" %}
  {% block content %}
      <!-- Page heading -->
      <div class="page-head">
        <h2 class="pull-left"><i class="fa fa-table"></i> Material</h2>

        <!-- Breadcrumb -->
        <div class="bread-crumb pull-right">
          <a href="/"><i class="fa fa-home"></i> Home</a> 
          <!-- Divider -->
          <span class="divider">/</span> 
          <a href="/order/list" class="bread-current">Material</a>
        </div>
        <div class="clearfix"></div>

      </div>
      <!-- Page heading ends -->

      <!-- Matter -->
      <div class="matter">
        <div class="container">

          <!-- Table -->

              <div class="col-md-12">
                  <div class="widget">
                <div class="widget-head">
                  <div class="pull-left">物料详情</div>
                  <div class="widget-icons pull-right">
                    <a class="wminimize" href="tables.html#"><i class="fa fa-chevron-up"></i></a> 
                    <a class="wclose" href="tables.html#"><i class="fa fa-times"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>

                  <div class="widget-content">
                      <table class="table table-striped table-bordered detail-view">
                        <tbody>
                          <tr>
                            <th>物料编码</th>
                            <td>{{ material.code }}</td>
                          </tr>
                           <tr>
                            <th>物料名称</th>
                            <td>{{ material.name }}</td>
                          </tr>
                          <tr>
                            <th>物料英文名称</th>
                            <td>{{ material.english_name }}</td>
                          </tr>
                          <tr>
                            <th>物料详情</th>
                            <td>{{ material.desc }}</td>
                          </tr>
                          <tr>
                            <th>物料图片</th>
                            <td>
                                {% for image in material.image %}
                                <img src="{{ image }}" /> <br/><br/><br/>
                                {% endfor %}
                            </td>
                          </tr>
                        </tbody>
                      </table>
                    

                    <div class="widget-foot">
                      <div class="clearfix"></div> 

                    </div>

                  </div>
                </div>
              </div>
            </div>
        </div>

      </div>
<script type="text/javascript">
function changeStatus(orderid){
    $('#image_num').val(orderid);
    this.click();
}
function submitChangeOrder(){
    $('#uploadimageForm').submit();
}
</script>
{% endblock %}
