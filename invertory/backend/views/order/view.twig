{% set menu_name = "order" %}
{% set sidebar_name = "订单列表" %}
{% extends "../layouts/header.twig" %}
  {% block content %}
      <!-- Page heading -->
      <div class="page-head">
        <h2 class="pull-left"><i class="fa fa-table"></i> Order</h2>

        <!-- Breadcrumb -->
        <div class="bread-crumb pull-right">
          <a href="/"><i class="fa fa-home"></i> Home</a> 
          <!-- Divider -->
          <span class="divider">/</span> 
          <a href="/order/list" class="bread-current">Order</a>
        </div>

        <div class="clearfix"></div>

      </div>
      <!-- Page heading ends -->

      <!-- Matter -->
      <div class="matter">
        <div class="container">

          <!-- Table -->

            <div class="row">

              <div class="col-md-4">

                <div class="widget">

                <div class="widget-head">
                  <div class="pull-left">订单详情</div>
                  <div class="widget-icons pull-right">
                    <a href="tables.html#" class="wminimize"><i class="fa fa-chevron-up"></i></a> 
                    <a href="tables.html#" class="wclose"><i class="fa fa-times"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>

                  <div class="widget-content">
{{ widget('\\yii\\widgets\\DetailView', {
      'model':order,
      'attributes':{
          0:'viewid',
          3:'recipients',
          4:'recipients_address',
          5:'recipients_contact',
          6:'goods_active',
          7:{'attribute':'storeroom_id','value':order.storeroom.name},
          8:'info',
          9:{
            'attribute':'状态',
            'value':order.getOrderStatus(),
          }
      }

} )
  
}}
                    

                    <div class="widget-foot">
                      <div class="clearfix"></div> 

                    </div>

                  </div>
                </div>
              </div>

                            <div class="col-md-4">

                <div class="widget">

                <div class="widget-head">
                  <div class="pull-left">订单内容</div>
                  <div class="widget-icons pull-right">
                    <a class="wminimize" href="tables.html#"><i class="fa fa-chevron-up"></i></a> 
                    <a class="wclose" href="tables.html#"><i class="fa fa-times"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>

                  <div class="widget-content">

                    <table class="table table-striped table-bordered table-hover">
                      <thead>
                        <tr>
                          <th>物料编码</th>
                          <th>物料名称</th>
                          <th>发货数量</th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for de in detail %}
                        <tr>
                          <td>{{ de.goods_code }}</td>
                          <td>{{ de.material.name }}</td>
                          <td>{{ de.goods_quantity }}</td>
                        </tr>
                        {% endfor %}
                      </tbody>
                    </table>

                  </div>

                </div>
              </div>


                            <div class="col-md-4">

                <div class="widget">

                <div class="widget-head">
                  <div class="pull-left">渠道明细</div>
                  <div class="widget-icons pull-right">
                    <a href="tables.html#" class="wminimize"><i class="fa fa-chevron-up"></i></a> 
                    <a href="tables.html#" class="wclose"><i class="fa fa-times"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>

                  <div class="widget-content">

                    

                    <div class="widget-foot">
                      <div class="clearfix"></div> 

                    </div>

                  </div>
                </div>
              </div>



            </div>
        </div>
      </div>
{% endblock %}
