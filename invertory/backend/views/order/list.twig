{% set menu_name = "order" %}
{% set sidebar_name = "订单列表" %}
{% extends "../layouts/header.twig" %}
  {% block content %}
      <!-- Page heading -->
      <div class="page-head">
        <h2 class="pull-left"><i class="fa fa-table"></i> Order</h2>

        <!-- Breadcrumb -->
        <div class="bread-crumb pull-right">
          <a href="/"><i class="fa fa-home"></i> Home</a> 
          <!-- Divider -->
          <span class="divider">/</span> 
          <a href="/order/list" class="bread-current">Order</a>
        </div>

        <div class="clearfix"></div>

      </div>
      <!-- Page heading ends -->

      <!-- Matter -->
      <div class="matter">
        <div class="container">

          <!-- Table -->

            <div class="row">

              <div class="col-md-12">

                <div class="widget">

                <div class="widget-head">
                  <div class="pull-left">Tables</div>
                  <div class="widget-icons pull-right">
                    <a href="tables.html#" class="wminimize"><i class="fa fa-chevron-up"></i></a> 
                    <a href="tables.html#" class="wclose"><i class="fa fa-times"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>

                  <div class="widget-content">
{{ widget('\\yii\\grid\\GridView', {
            'layout':'\n{items}\n{pager}',         
            'id':'app-grid', 
            'tableOptions':{'class':'table table-striped table-bordered table-hover'},
            'dataProvider':dataProvider,
            'filterModel':searchModel,
            'pager':{
                'class':'\\common\\extensions\\Page\\CPageLink',
            },
            'columns':{
                0:{
                  'attribute':'id',
                },
                1:{
                  'attribute':"goods_code",
                },
                2:{
                  'attribute':'goods_quantity',
                },
                3:{
                  'attribute':'goods_active',
                },
                4:{
                  'attribute':'storeroom_id',
                  'value':'return $model->storeroom->name;'|value_callback,
                },
                5:{
                  'attribute':'recipients',
                },
                6:'recipients_address',
                7:'recipients_contact',
                8:'created',
                9:{
                  'attribute':'创建人',
                  'value':'return $model->createduser->username;'|value_callback,
                },
                10:{
                  'attribute':'修改人',
                  'value':'return $model->modifieduser->username;'|value_callback,
                },
                11:{
                    'class':'\\common\\extensions\\Grid\\GridActionColumn',
                    'template':'{update}{view}',
                },
        }})
    }}
                    

                    <div class="widget-foot">
                      <div class="clearfix"></div> 

                    </div>

                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
{% endblock %}
