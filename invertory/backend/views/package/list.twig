{% set menu_name = "package" %}
{% set sidebar_name = "包装明细" %}
{% extends "@app/views/layouts/header.twig" %}
  {% block content %}
      <!-- Page heading -->
      <div class="page-head">
        <h2 class="pull-left"><i class="fa fa-table"></i> Package</h2>

        <!-- Breadcrumb -->
        <div class="bread-crumb pull-right">
          <a href="/"><i class="fa fa-home"></i> Home</a> 
          <!-- Divider -->
          <span class="divider">/</span> 
          <a href="/package/list" class="bread-current">Package</a>
        </div>

        <div class="clearfix"></div>

      </div>
      <!-- Page heading ends -->

      <!-- Matter -->
      <div class="matter">
        <div class="container">

          <!-- Table -->

            <div class="row">

              <div class="col-md-12">

                <div class="widget">

                <div class="widget-head">
                  <div class="pull-left">Tables</div>
                  <div class="widget-icons pull-right">
                    <a href="tables.html#" class="wminimize"><i class="fa fa-chevron-up"></i></a> 
                    <a href="tables.html#" class="wclose"><i class="fa fa-times"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>

                  <div class="widget-content">
{{ widget('\\yii\\grid\\GridView', {
            'layout':'\n{items}\n{pager}',         
            'id':'app-grid', 
            'tableOptions':{'class':'table table-striped table-bordered table-hover'},
            'dataProvider':dataProvider,
            'filterModel':searchModel,
            'pager':{
                'class':'\\common\\extensions\\Page\\CPageLink',
            },
            'columns':{
                1:{
                  'attribute':"num",
                },
                2:{
                  'attribute':'actual_weight',
                },
                3:{
                  'attribute':'throw_weight',
                },
                4:{
                  'attribute':'trunk',
                },
                5:'delivery',
                6:'volume',
                7:{'attribute':'method','value':searchModel.getMethodText()|value_callback},
                8:'created',
                9:{
                  'attribute':'创建人',
                  'value':'return $model->createduser->username;'|value_callback,
                },
                11:{
                    'class':'\\common\\extensions\\Grid\\GridActionColumn',
                    'template':'{view}',
                },
        }})
    }}
                    

                    <div class="widget-foot">
                      <div class="clearfix"></div> 

                    </div>

                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
{% endblock %}
