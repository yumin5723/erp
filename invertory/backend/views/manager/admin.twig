{% set menu_name = "managers" %}
{% set sidebar_name = "管理员列表" %}
{% extends "@app/views/layouts/header.twig" %}
  {% block content %}
      <!-- Page heading -->
      <div class="page-head">
        <h2 class="pull-left"><i class="icon-file-alt"></i> Managers</h2>
        <!-- Breadcrumb -->
        <div class="bread-crumb pull-right">
          <a href="/"><i class="icon-home"></i> Home</a> 
          <!-- Divider -->
          <span class="divider">/</span> 
          <a href="/manager/admin" class="bread-current">Managers</a>
        </div>
        <div class="clearfix"></div>
      </div>
      <!-- Page heading ends -->

      <!-- Matter -->

         <div class="matter">
        <div class="container">

          <!-- Table -->

            <div class="row">

              <div class="col-md-12">

                <div class="widget">

                <div class="widget-head">
                  <div class="pull-left">Tables</div>
                  <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a> 
                    <a href="#" class="wclose"><i class="icon-remove"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>

                  <div class="widget-content">
                          {{ widget('\\yii\\grid\\GridView', {
            'layout':'\n{items}\n{pager}',         
            'id':'app-grid', 
            'tableOptions':{'class':'table table-striped table-bordered table-hover'},
            'dataProvider':dataProvider,
            'filterModel':searchModel,
            'pager':{
                'class':'\\common\\extensions\\Page\\CPageLink',
            },
            'columns':{
                0:{
                  'attribute':'id',
                },
                1:{
                  'attribute':"username",
                },
                2:{
                  'attribute':'email',
                },
                3:{
                  'attribute':'storeroom_id',
                  'value':'return $model->stores->name;'|value_callback,
                },
                4:{
                    'attribute':'status',
                    'label':'用户状态',
                    'value':'if($model->status == 10){return "正常";}else{return "禁用";}'|value_callback,
                },
                5:'created',
                6:'modified',
                7:{
                    'class':'\\common\\extensions\\Grid\\GridActionColumn',
                    'template':'{update}{delete}{assignment}',
                },
        }})
    }}

                    <div class="widget-foot">
                      <div class="clearfix"></div> 
                    </div>

                  </div>
                </div>
              </div>

            </div>
        </div>
      </div>
{% endblock %}
