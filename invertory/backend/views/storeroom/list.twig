{% set menu_name = "storeroom" %}
{% set sidebar_name = "仓库列表" %}
{% extends "@app/views/layouts/header.twig" %}
  {% block content %}
      <!-- Page heading -->
      <div class="page-head">
        <h2 class="pull-left"><i class="icon-file-alt"></i> 仓库</h2>
        <!-- Breadcrumb -->
        <div class="bread-crumb pull-right">
          <a href="/"><i class="icon-home"></i> Home</a> 
          <!-- Divider -->
          <span class="divider">/</span> 
          <a href="/storeroom/list" class="bread-current">仓库</a>
        </div>
        <div class="clearfix"></div>
      </div>
      <!-- Page heading ends -->

      <!-- Matter -->

         <div class="matter">
        <div class="container">

          <!-- Table -->

            <div class="row">

              <div class="col-md-12">

                <div class="widget">

                <div class="widget-head">
                  <div class="pull-left">Tables</div>
                  <div class="widget-icons pull-right">
                    <a href="tables.html#" class="wminimize"><i class="fa fa-chevron-up"></i></a> 
                    <a href="tables.html#" class="wclose"><i class="fa fa-times"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>

                  <div class="widget-content">
                          {{ widget('\\yii\\grid\\GridView', {
            'layout':'\n{items}\n{pager}',         
            'id':'app-grid', 
            'tableOptions':{'class':'table table-striped table-bordered table-hover'},
            'dataProvider':dataProvider,
            'filterModel':searchModel,
            'pager':{
                'class':'\\common\\extensions\\Page\\CPageLink',
            },
            'columns':{
                0:{
                  'attribute':'id',
                },
                1:{
                  'attribute':"name",
                },
                2:{
                  'attribute':'address',
                },
                3:{
                  'attribute':'level',
                },
                4:{
                  'attribute':'contact',
                },
                5:{
                  'attribute':'phone',
                },
                8:{
                    'class':'\\common\\extensions\\Grid\\GridActionColumn',
                    'template':'{update}',
                },
        }})
    }}

                    <div class="widget-foot">
                      <div class="clearfix"></div> 
                    </div>

                  </div>
                </div>
              </div>

            </div>
        </div>
      </div>
{% endblock %}
